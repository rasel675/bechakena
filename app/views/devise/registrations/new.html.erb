<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <h3>Sign Up</h3>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mt-3 container-fluid">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row mb-3">
            <%= f.label :email, class:"col-sm-2 col-form-label" %><br />
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, placeholder: "new email", class: "form-control"%>
              </div>
          </div>

          <div class="row mb-3">
            <%= f.label :password, class:"col-sm-2 col-form-label"  %><br />
            <div class="col-sm-10">
            <%= f.password_field :password, placeholder: "new-password", class: "form-control" %>
            </div>
          </div>

          <div  class="row mb-3">
            <%= f.label :password_confirmation, class:"col-sm-2 col-form-label" %><br />
            <div class="col-sm-10">
            <%= f.password_field :password_confirmation, placeholder: "new-password", class: "form-control" %>
            </div>
          </div>

          <div>
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <div class="col-3"></div>
</div>
