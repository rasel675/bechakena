<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <h3>Update <%=@product.name %></h3>
      <div class="mt-3 container-fluid">
        <%= form_with model: @product do |form| %>
          <div class="row mb-3">
              <%= form.label :name, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :name, placeholder: "Product Name", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
              <%= form.label :description, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :details, placeholder: "Details", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
              <%= form.label :price, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.text_field :price, placeholder: "Price", class: "form-control" %>
            </div>
          </div>
          <div class="row mb-3">
              <%= form.label :category_id, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.select :category_id, Category.where.not(category_id: nil).map { |c| [c.name, c.id] }, class: "form-control form-select" %>
            </div>
          </div>
          <br>
          <div>
            <%= form.submit "Update", class:"btn btn-primary" %>
          </div>
      <% end %>
  <div class="col-3"></div>
</div>