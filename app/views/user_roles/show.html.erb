<div class="row mt-3">
  <div class="col">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Username</th>
          <th scope="col">Email ID</th>
          <th scope="col">Role</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.username %></td>
          <td><%= @user.email %></td>
          <td><%= @user.roles.to_sentence %></td>
          <td>
            <%= link_to "View", user_role_path(@user), class:" btn btn-info" %>
            <%= link_to "Edit", edit_user_role_path(@user), class: "btn btn-warning" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>