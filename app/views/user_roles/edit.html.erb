<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <h3>Edit User Details </h3>
      <div class="mt-3 container-fluid">
        <%= form_with url: user_role_path do |form| %>
        <div class="row mb-3">
            <%= form.label :name, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.text_field :name, placeholder: "Full Name", class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3">
            <%= form.label :username, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.text_field :username, placeholder: "Username", class: "form-control" %>
          </div>
        </div>
         <div class="row mb-3">
            <%= form.label :email, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.text_field :email, placeholder: "email", class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3">
            <%= form.label :roles, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.select :roles, (User::USER_ROLES).map {|n| [n.capitalize, n]} , class: "form-control form-select" %>

          </div>
        </div>
        <br>
        <div>
          <%= form.submit "Update", class:"btn btn-primary" %>
        </div>
      <% end %>
  <div class="col-3"></div>
</div>